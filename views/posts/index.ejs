<!-- views/posts/index.ejs -->

<!DOCTYPE html>
<html>

<head>
    <%- include('../partials/head') %>
</head>

<body>
    <%- include('../partials/nav') %>

        <div class="row">
            <div class="col-2" style="margin: 0em -1em 0em 1em; padding-top:3.5em">
                <%- include('../partials/div-nav') %>
            </div>
            <div class="col-10 pl-5 pr-5">
                <h2 class="mb-3">Posts</h2>

                <table class="board-table table table-sm border-bottom">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Title</th>
                            <th scope="col" class="category">Category</th>
                            <th scope="col" class="date">Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(posts==null || posts.length==0){ %>
                            <tr>
                                <td colspan="2"> There is no data to show :(</td>
                            </tr>
                            <% } %>
                                <% posts.forEach((post)=> { %>
                                    <tr>
                                        <td>
                                            <dl>
                                                <a href="/posts/<%= post._id %>" name="post_names"
                                                    onclick="clickPost(this);">
                                                    <div class="ellipsis">
                                                        <dt class="inner_title">
                                                            <%= post.title %>
                                                        </dt>
                                                    </div>
                                                </a>
                                                <dd class="description d-none"><%= post.body %></dd>
                                            </dl>
                                        </td>
                                        <td class="ellipsis">
                                            <%= post.category %>
                                        </td>
                                        <td class="date-data">
                                            <span data-date="<%= post.createdAt %>"></span>
                                        </td>
                                    </tr>
                                    <% }) %>
                    </tbody>
                </table>
                <div class="form-inline justify-content-between">
                    <a class="btn btn-primary mr-sm-2" href="/posts/new">New</a>
                    <form class="search-form" name="search_form">
                        <select class="form-control" name="search_type" id="search_type">
                            <option value="title">title</option>
                            <option value="body">body</option>
                            <option value="title+body">title+body</option>
                        </select>
                        <input class="form-control mr-sm-2" type="search" id="search_value" name="search_value"
                            placeholder="Search post" aria-label="Search">
                        <button class="btn btn-outline-primary my-2 my-sm-0" id="search_button" name="search_button"
                            onclick="clickSearch();">Search</button>
                    </form>
                </div>

            </div>
        </div>
        </div>
</body>

</html>